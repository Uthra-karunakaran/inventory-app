<div class="form_container">
  <h2>Edit Item</h2>
  <%- include("partials/errors.ejs") %>

  <form action="/items/update/<%= formData.id %>" method="POST">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= formData.name || '' %>" required>
    </div>

    <div class="form-group">
      <label for="category_name">Category:</label>
      <select class="form-select" aria-label="Default select example" name="category_name" id="category_name" required>
        <option selected><%= formData.category_name || '' %></option>
        <% formData["cat_names"].map((catname)=>{ %>
          <option value="<%= catname.name %>"><%= catname.name %></option>
        <% }) %>
        
      </select>
    </div>

    <div class="form-group">
      <label for="description">Description:</label>
      <textarea name="description" id="description"><%= formData.description || '' %></textarea>
    </div>

    <div class="form-group">
      <label for="price">Price:</label>
      <input type="text" name="price" id="price" value="<%= formData.price || '' %>" required>
    </div>

    <div class="form-group">
      <label for="stock">Stock:</label>
      <input type="number" name="stock" id="stock" min="10" value="<%= formData.stock || 10 %>">
    </div>

    <div class="form-group">
      <label for="imgurl">Image URL:</label>
      <input type="text" name="imgurl" id="imgurl" value="<%= formData.imgurl || '' %>" required>
    </div>

    <div class="form-group">
      <button type="submit">Submit</button>
    </div>
  </form>
</div>